algoritmo "TimerEnquanto"
var
   cont: Inteiro
inicio
      Escreval("Timer em segundos: ")
      Leia(cont)
                Enquanto (cont >= 0) faca
                         Escreval("Contando...", cont)
                         cont <- cont - 1
                FimEnquanto
      Escreval("")
      Escreval("FIM DE CONTAGEM")
fimalgoritmo