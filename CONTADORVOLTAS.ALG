algoritmo "ContadorVoltas"
var
   volta, cont: Inteiro
inicio
      Escreva("Contar quantas voltas? ")
      Leia(volta)
      Escreval("")
      cont <- 1
           Enquanto (cont <= volta) faca
                    Escreval("Volta", cont)
                    cont <- cont + 1
           FimEnquanto
      Escreval("")
      Escreval("FIM DE CORRIDA")
fimalgoritmo